.schedule{
  margin-bottom: 50rpx;
  margin-top: 270rpx;
  width: 96%;
  margin-left: 2%;
  border-radius: 20rpx;
}

.today{
  border-radius: 0; 
  background-color: rgba(218, 249, 252, 0.5);
  width: 90rpx;
  position: absolute;
  z-index: 3;
  height: 1300rpx;
  overflow: hidden;
}

.top {
  border-radius: 20rpx 20rpx 0 0; 
  display: flex;
  flex-direction: row;
  padding-left: 90rpx;
  background-color: #fff;
  color: #808080;
  height: 50rpx;
}

.week{
  position: absolute;
  border-radius:15rpx;
  height: 50rpx;
  width: 300rpx;
  color:#808080;
  background-color: white;
  line-height: 50rpx;
  top:180rpx;
  font-weight: 600;
  text-align: center;
  margin:20rpx 0 20rpx 210rpx;
}

.top-text {
  width: 90rpx;
  height: 50rpx;
  font-size: 10pt;
  justify-content: center;
  display: flex;
  align-items: center;
  z-index: 5;
}

.left {
  width: 90rpx;
  height: 120rpx;
  font-size: 9pt;
  justify-content: center;
  display: flex;
  align-items: center;
  text-align: center;
}

.flex-item {
  width: 85rpx;
  height: 230rpx;
  text-align: center;
  z-index: 7;
}

.kcb-item {
  position: absolute;
  top: 250rpx;
  left: 105rpx;
  justify-content: center;
  display: flex;
  align-items: center;
  border-radius: 5px;
}

.smalltext {
  font-size: 8pt;
  color: #fff;
  overflow: hidden; 
}

.smalltext-info{
  margin-left: 5rpx;
  text-align: left;
  overflow: hidden; 
  text-overflow: ellipsis; 
  display: -webkit-box;  
  -webkit-line-clamp: 2;/* 这里控制行数 */
  -webkit-box-orient: vertical;
}

.noclass{
  position: fixed;
  bottom: 620rpx;
  left: 195rpx;
  z-index: 8;
}

.noclass-info{
  font-weight: 600;
  color: #808080;
  text-align: center;
  z-index: 9;
}