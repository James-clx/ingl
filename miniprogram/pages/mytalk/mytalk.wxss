page{
  background-color: rgb(241, 241, 241);
  height: 100%;
}
.header-user{
  z-index: 10;
  background-color: white;
  position: fixed;
  top: 0;
  width: 100%;
  height: 200rpx;
  border-bottom: 1px solid rgb(236, 236, 236);
  margin-bottom: 50rpx;
  display: flex;
  flex-direction: row;
}
.header-userinfo{
  padding-left: 50rpx;
  flex: 2;
  display: flex;
  flex-direction: row;
}
.header-avatarurl{
  width: 150rpx;
  height: 140rpx;
  border-radius: 50%;
  flex: 1;
}
.header-name{
  padding-left: 20rpx;
  flex: 2;
}
.header-sex{
  font-size: x-large;
  font-weight: 600;
}
.header-sex>image{
  width: 30rpx;
  height: 30rpx;
}
.header-country{
  font-size: smaller;

}
.header-postinfo{
  padding-right: 50rpx;
  margin-top: 60rpx;
  flex: 1;
  display: flex;
  flex-direction: row;
  padding-bottom: 50rpx;
}
.header-like{
  font-weight: 600;
  text-align: center;
  flex: 1;
  border-right: 1px solid gray;
}
.header-post{
  font-weight: 600;
  text-align: center;
  flex: 1;
}

/* 用户推文组件 */
.push{
  background-color: rgb(255, 255, 255);
  border-radius: 15rpx;
  width: 94%;
  padding-top: 20rpx;
  margin-left: 3%;
  padding-bottom: 20rpx;
  margin-top: 22rpx;
  margin-bottom: 22rpx;
  display: flex;
  flex-direction:column;
}
.user{
  display: flex;
  flex-direction:row;
}
.userinfoimg{
  margin-left: 20rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.nickname{
  font-weight: 600;
}
.userpushtime{
  color: gray;
  font-size: x-small;
}
.userinfotext{
  width: 300rpx;
  margin-left: 20rpx;
}
.look-info{
  padding-left:80rpx;
  margin-top:10rpx;
}
.userpushtext{
  font-weight: 500;
  word-break:break-all;
  display: inline-block;
  width: 600rpx;
  margin-left: 30rpx;
  margin-top: 10rpx;
}
.userpushimg{
  margin-top: 20rpx;
  margin-left: 2%;
  width: 96%;
  height: 300rpx;
  overflow: hidden;
  display: flex;
  justify-content: center;
}
.itemimg{
  height: 100%;
}
.pushinfo{
  margin-top: 20rpx;
  display: flex;
  margin-right: 50rpx;
  font-size: small;
  font-weight: 600;
}
.likebutton{
  width:30%;
  margin-right:40%;
}
.likeimg{
  margin-left: 50rpx;
  flex: 2;
  width: 40rpx;
  height: 40rpx;
}
.likes{
  padding-left: 5rpx;
}
.hot-info{
  margin-left:20rpx;
  margin-top:10rpx;
}
.delete{
  display: flex;
  flex-direction: row;
}
.admin-top{
  flex: 1;
  text-align: left;
  margin-left: 30rpx;
  margin-top: 30rpx;
}
.delete-post{
  flex: 1;
  text-align: right;
  margin-top: 30rpx;
  margin-right: 45rpx;
}
.line{
  padding: 20rpx;
  margin-left: 0%;
  width: 100%;
  border-bottom: 1px solid rgb(240, 240, 240);
}
.shownothing{
  text-align: center;
  padding-top: 500rpx;
  color: rgb(68, 177, 240);
  font-weight: 600;
}