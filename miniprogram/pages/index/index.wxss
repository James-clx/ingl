
swiper{
  width: 100%;
}
swiper-item image{
  margin-left: 0;
  width: 100%;
  height: 100%;
}
/* buttom */
.buttom {
  position: absolute;
  bottom: 10%;
  left: 23%;
  top: 87%;
  right: 23%;
}
.v-t{
  position: absolute;
  bottom: 20%;
  left: 23%;
  top: 75%;
  right: 23%;
  animation-duration: 1s;
}
@keyframes text {
  0% {opacity: 0;}
  25%{opacity: 25;}
  50%{opacity: 50;}
  75%{opacity: 75;}
  100% {opacity: 100;}
}
.v-title{
  color:white;
  text-align: center;
  margin-bottom: 30rpx;
  font-size: 36rpx;
  font-weight: bold;
}
.v-text{
  color: white;
  text-align: center;
  margin-bottom: 40rpx;
  font-size: 28rpx;
}

.bot-others{
  background-color: rgba(255, 255, 255, 0);
  border: 1px solid white;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  color: white;
  font-size: 20rpx;
}

.bot-others-img{
  margin-top: 30rpx;
  margin-left: 165rpx;
  text-align: center;
  height: 80rpx;
  width: 80rpx;
  animation: image 1s infinite; 
}

@keyframes image {
  0% {
      transform: translate(0px, 0px);
  }
  50% {
      transform: translate(0px, -9px);
  }
  100% {
      transform: translate(0px, 0px);
  }
}

/* select */
.select{
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-top: 220rpx;
}
.sel-block{
  display: flex;
  flex-direction: column;
  width: 100%;
}
.sel-block-item{
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 355rpx;
  margin-bottom: 10rpx;
}
/* footer */
.footer{
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-top: 70rpx;
}
.fo-other{
  display: flex;
  flex-direction: column;
  width: 95%;
  margin-left: 15rpx;
  justify-content:center;
}

