page{
  background-color: rgb(241, 241, 241);
  height: 100%;
}

.header{
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 10;
  background-color: rgb(241, 241, 241);
}

.searchtalk{
  width: 32%;
  margin-top: 80rpx;
}

.searchmask{
  width: 100%;
  position: fixed;
  top: 0;
  background-color: rgba(0, 0, 0, 0.726);
}

.searchtalkinfo{
  padding-top: 80rpx;
  width: 100%;
  background-color: white;
  position: fixed;
  top: 0;
  animation: search 0.5s; 
  z-index: 20;
}

@keyframes search {
  0% {
      transform: translate(0px, -1000px);
  }
  100% {
      transform: translate(0px, 0px);
  }
}

.searchinput{
  width: 70%;
}

.searchsubmit{
  width: 60rpx;
  height: 60rpx;
}

.searchcount{
  width: 100%;
  text-align: center;
  color: #808080;
  line-height: 70rpx;
}

.searchinfo{
  display: -webkit-box;
  -webkit-box-orient:vertical;
  text-overflow: ellipsis;
  overflow:hidden; 
  -webkit-line-clamp:1;
}

.searchend{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background-color: rgb(255, 255, 255);
  animation: search 0.5s; 
}

.talk{
  margin-top: 180rpx;
}

/* 用户推文组件 */
.push{
  background-color: rgb(255, 255, 255);
  border-radius: 15rpx;
  width: 94%;
  padding-top: 20rpx;
  margin-left: 3%;
  padding-bottom: 20rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.user{
  display: flex;
  flex-direction:row;
}
.userinfoimg{
  margin-left: 20rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.nickname{
  font-weight: 600;
}
.userpushtime{
  color: gray;
  font-size: x-small;
}
.userinfotext{
  margin-top: 5rpx;
  width: 300rpx;
  margin-left: 20rpx;
}
.userpushtext{
  font-weight: 500;
  word-break:break-all;
  display: inline-block;
  width: 93%;
  margin-left: 30rpx;
  margin-top: 10rpx;
  display: -webkit-box;
  -webkit-box-orient:vertical;
  text-overflow: ellipsis;
  overflow:hidden; 
  -webkit-line-clamp:4;
}
.userpushimg{
  margin-top: 20rpx;
  margin-left: 2%;
  width: 96%;
  height: 300rpx;
  overflow: hidden;
  display: flex;
  justify-content: center;
}
.itemimg{
  height: 100%;
}
.pushinfo{
  margin-top: 20rpx;
  display: flex;
  margin-right: 50rpx;
  font-size: small;
  font-weight: 600;
}
.likebutton{
  width:30%;
}
.likeimg{
  margin-left: 50rpx;
  flex: 2;
  width: 40rpx;
  height: 40rpx;
}
.likes{
  padding-left: 5rpx;
}
.hot-info{
  width: 50%;
  text-align: right;  
  margin-top:10rpx;
}

/* 打开上传页面悬浮按钮 */
.pushbutton{
  border: 1px solid gray;
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  bottom: 100rpx;
  right: 20rpx;
  background-color: white;
}
/* 悬浮按钮图片 */
.pushbuttonimg{
  margin-top: 13rpx;
  margin-left: 20rpx;
  width: 70rpx;
  height: 70rpx;
}

/*页面最外层view*/
.input{
  z-index: 5;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 5000rpx;
  
}
/* 第二层view */
.inputinfo{
  z-index: 10;
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 680rpx;
  background-color: white;
}
/* 输入框 */
.section{
  width: 88%;
  height: 260rpx;
  margin-top: 50rpx;
  padding-bottom: 300rpx;
  margin-bottom: 20rpx;
  margin-left: 5%;
  border-bottom: 2px solid rgb(216, 216, 216);
  display: flex;
}
.section>section{
  height: 240rpx;
  flex: 1;
}
/*选择图片View*/
.container{
  flex: 1;
	padding: 20rpx;
}
/* 添加照片view */
.add{
  border: 1px solid rgb(156, 156, 156);
  border-radius: 30rpx;
	width: 200rpx;
	height: 200rpx;
  text-align: center;
  margin-top: -20rpx;
  margin-bottom: 10rpx;
}
.addImv{
  margin: 20rpx 20rpx;
  height: 600rpx;
  background-color: #EEEEEE;
  display: flex;
  padding: 0 20rpx;
  flex-direction: row; 
  flex-wrap: wrap; 
}
.add>image{
	width: 200rpx;
	height: 200rpx;
}
.uploadimage{
  border: 1px solid gray;
  border-radius: 30rpx;
	width: 200rpx;
	height: 200rpx;
}
.uploadimage>image{
  border-radius: 30rpx;
	width: 200rpx;
	height: 200rpx;
}
.imgtext{
  color: #acacac;
  font-size: xx-small;
  text-align: center;
}
/* 底部提交按钮 */
.tips{
  color: #acacac;
  font-weight: 600;
  font-size: smaller;
	text-align: center;
}