page{
  background-color: white;
  height: 100%;
}
/* 用户推文组件 */
.push{
  margin-top: 20rpx;
  width: 100%;
  padding-bottom: 10px;
  margin-bottom: 20px;
  display: flex;
  flex-direction:column;
}
.user{
  display: flex;
  flex-direction:row;
}
.userinfoimg{
  margin-left: 20rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.nickname{
  font-weight: 600;
}
.userpushtime{
  color: gray;
  font-size: x-small;
}
.userinfotext{
  width: 300rpx;
  margin-left: 20rpx;
}
.userpushtext{
  font-weight: 500;
  word-break:break-all;
  display: inline-block;
  width: 93%;
  margin-left: 30rpx;
  margin-top: 10rpx;
}
.userpushimg{
  background-color: rgba(236, 236, 236, 0.342);
  margin-top: 20rpx;
  margin-left: 3%;
  width: 94%;
  height: 500rpx;
  overflow: hidden;
  display: flex;
  justify-content: center;
}
.itemimg{
  height: 100%;
}